<div class="grid-x menu">
        <div class="cell small-8 medium-8 large-8">
            <ul class="menu-ul">
                <li class='links'><a href='/dashboard'> Principal </a></li>
                <li class='links'><a href='/service/painel'> Painel </a></li>
                <li class='links'><a href='/user/buscas'> Buscar </a></li>
            </ul>
        </div>
        <div class="cell small-4 medium-4 large-4">
            <ul class="menu-ul direita-vai">
                <% if(logado.typo == 'Normal'){ %>
                  <li class='links'><a href='/service/espera'> Em espera </a></li>
                  <li class='links'><a href='/service/transitando'> A caminho </a></li>
                <% }else{ %>
                  <li class='links'><a href='/service/caixa'> Caixa </a></li>
                  <li class='links'><a href='/service/ordenado'> Minhas entregas </a></li>
                <% } %>
                <li class='links'><a href='/user/usuario/<%= logado._id %>'> Perfil </a></li>
                <li class='links'><a href='/user/logout/'> Sair <i class="fas fa-sign-out-alt"></i></a></li>
            </ul>
        </div>
    </div>
<form action="/user/update?_method=put" method="post" class='form-perfil'>
    <div class='grid-x perfil'>
        <input type='hidden' id='_id' name='_id' value='<%= user._id %>'/>
        <div class="cell small-5 medium-5 large-4 pdt">
            <div class='photo'>
                <img src='/img/no-img.jpg' class='user-photo'/>
            </div>
            <button type='submit' class='btn-pedido'> Salvar </button>
            <button class='btn-denuncia'><a href='/user/usuario/<%= user._id %>' > Cancelar </a></button>
        </div>
        <div class="cell small-7 medium-7 large-8 hr">
            <input type='text' id='name' name='name' class='input-user-name' value="<%= user.name %>"/>
            <div class='grid-x grid-margin-x'>
                <div class='cell small-3 medium-3 large-3'>
                    <div class='descricao-box'>
                        <span class='label-descri'>Cidade</span>
                        <select id='city' name='city' class='input-user-information'>
                            <% var options = [ "Jales", "Campinas", "Uberaba", "Brasilia"];
                                for(var i = 0;i < options.length;i++){
                                    var selected = (options[i] == user.city) ? "selected" : "";%>
                                    <option value="<%=options[i] %>" <%=selected %>>
                                        <%= options[i] %>
                                    </option>
                                <%}
                            %>
                        </select>
                    </div>
                </div>
                <div class='cell small-3 medium-3 large-3'>
                    <div class='descricao-box'>
                        <span class='label-descri'>Idade</span>
                        <input type='number' id='age' name='age' class='input-user-information' value="<%= user.age %>"/>
                    </div>
                </div>
                <div class='cell small-3 medium-3 large-3'>
                    <div class='descricao-box'>
                        <% if(user.typo != 'Normal'){ %>
                            <span class='label-descri'>Preço unitário</span>
                            <input type='number' id='price' name='price' class='input-user-information okane' value="<%= user.price %>"/>
                        <% }else{ %>
                            <span class='label-descri'>Preço unitário</span>
                            <input type='number' id='price' name='price' class='input-user-information okane' value="<%= user.price %>" disabled/>
                        <% } %>
                    </div>
                </div>
                <div class='cell small-3 medium-3 large-3'>
                    <div class='descricao-box'>
                        <span class='label-descri'>Tipo</span>
                        <input type='text' id='typo' name='typo' class='input-user-information' value="<%= user.typo %>"/>
                    </div>
                </div>
            </div>
            <div class='descricao-box'>
                <span class='label-descri'>Descrição</span>
                <textarea id='description' name='description' rows='6'><%= user.description %></textarea>
            </div>
            <div class='descricao-box'>
                <span class='label-descri'>Curriculo</span>
                <textarea id='curriculum' name='curriculum' rows='6'><%= user.curriculum %></textarea>
            </div>
            <div class='descricao-box'>
                <span class='label-descri'><i class="fas fa-envelope"></i> Email</span>
                <input type='email' id='email' class='input-user-social' name='email' value="<%= user.email %>" placeholder='Email'/>
            </div>
            <div class='descricao-box'>
                <span class='label-descri'><i class="fab fa-whatsapp"></i> Celular </span>
                <input type='text' id='phone' class='input-user-social cellphone' name='phone' value="<%= user.phone %>" placeholder='Celular'/>
            </div>
            <div class='descricao-box'>
                <span class='label-descri'><i class="fab fa-facebook-f"></i> Facebook </span>
                <input type='text' id='facebook' class='input-user-social' name='facebook' value="<%= user.facebook %>" placeholder='facebook'/>
            </div>
            <div class='descricao-box'>
                <span class='label-descri'><i class="fab fa-linkedin-in"></i> Linkedin </span>
                <input type='text' id='linkedin' class='input-user-social' name='linkedin' value="<%= user.linkedin %>" placeholder='Linkedin'/>
            </div>
        </div>
    </div>
</form>
<% include ./partials/messages %>
