<div class="grid-x menu">
    <div class="cell small-8 medium-8 large-8">
        <ul class="menu-ul">
            <li class='links'><a href='/dashboard'> Principal </a></li>
            <li class='links'><a href='/service/painel'> Painel </a></li>
            <li class='links'><a href='/user/buscas'> Buscar </a></li>
        </ul>
    </div>
    <div class="cell small-4 medium-4 large-4">
        <ul class="menu-ul direita-vai">
            <% if(logado.typo == 'Normal'){ %>
              <li class='links'><a href='/service/espera'> Em espera </a></li>
              <li class='links'><a href='/service/transitando'> A caminho </a></li>
            <% }else{ %>
              <li class='links'><a href='/service/caixa'> Caixa </a></li>
              <li class='links'><a href='/service/ordenado'> Minhas entregas </a></li>
            <% } %>
            <li class='links'><a href='/user/usuario/<%= logado._id %>'> Perfil </a></li>
            <li class='links'><a href='/user/logout/'> Sair <i class="fas fa-sign-out-alt"></i></a></li>
        </ul>
    </div>
</div>
<div class="lista">
    <div class='grid-x'>
        <div class='cell box-btn-pps'>
            <div class='grid-x grid-margin-x'>
                <p> Filtrar por: </p>
                <button onclick='cidadebox();'> Cidade </button>
                <button onclick='nomebox();'> Nome </button>
            </div>
        </div>
        <div class="cell box-pps" id='nome-box'>
            <form action='/user/buscas' method='post'>
                <div class="grid-x">
                    <input type="text" name='name' id='name' placeholder="Digite um nome" class='pesquisar'>
                    <button type='submit' class='btn-vira'> Pesquisar </button>
                </div>
            </form>
        </div>
        <div class="cell box-pps" id='cidade-box'>
            <form action="/user/disponiveis" method="post">
                <div class="grid-x">
                    <input type='text' id='city' name='city' placeholder='Cidade' class='pesquisar-input'>
                    <button type='submit' class='btn-vira'> Pesquisar </button>
                </div>  
            </form>
        </div>
    </div>
    <p class='titulo-buscas'> <i class="fas fa-home"></i> Disponiveis </p>
    <div class="grid-x grid-margin-x">
        <% include ./partials/list %>
    </div>
</div>
<% include ./partials/footer %>
